\begin_inset Formula 
\begin{multline*}
\varphi\left(\left(x_{1},y_{1}\right)\left(x_{2},y_{2}\right)\right)=\left(\left(x_{1}x_{2}\right)N_{1},\left(y_{1}y_{2}\right)N_{2}\right)=\\
=\left(\left(x_{1}N_{1}\right)\left(x_{2}N_{1}\right),\left(y_{1}N_{2}\right)\left(y_{2}N_{2}\right)\right)=\\
=\left(x_{1}N_{1},y_{1}N_{2}\right)\left(x_{2}N_{1},y_{1}N_{2}\right)=\varphi\left(\left(x_{1},y_{1}\right)\right)\varphi\left(\left(x_{2},y_{2}\right)\right).
\end{multline*}

\end_inset


\end_layout

