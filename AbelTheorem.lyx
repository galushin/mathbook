\begin_inset Formula 
\begin{multline*}
\varphi\left(\left[a_{j},b_{j}\right]\right)=\varphi\left(a_{j}b_{j}a_{j}^{-1}b_{j}^{-1}\right)=\\
=\varphi\left(a_{j}\right)\varphi\left(b_{j}\right)\varphi\left(a_{j}^{-1}\right)\varphi\left(b_{j}^{-1}\right)=\\
=x_{j}y_{j}x_{j}^{-1}y_{j}^{-1}=\left[x_{j},y_{j}\right].
\end{multline*}

\end_inset


