\]

\end_inset

 то 
\begin_inset Formula 
\begin{multline*}
P\left(x\right)\cdot Q\left(x\right)=a_{0}b_{0}x^{n+m}+\left(a_{0}b_{1}+a_{1}b_{0}\right)x^{n+m-1}+\\
+\left(a_{0}b_{2}+a_{1}b_{1}+a_{2}b_{0}\right)x^{n+m-2}+\dots+a_{n}b_{m}.
\end{multline*}

\end_inset


