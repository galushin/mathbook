\begin_inset CommandInset ref
LatexCommand ref
reference "def:homomorphism"
plural "false"
caps "false"
noprefix "false"

\end_inset

 
\begin_inset Formula $\mathbb{C}$
\end_inset

в 
\begin_inset Formula $M$
\end_inset

