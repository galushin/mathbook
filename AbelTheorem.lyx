reference "prob:geometric-interpretation-of-absolute-value-and-argument-of-complex-number"
plural "false"
caps "false"
noprefix "false"

\end_inset

(пункт в) и 
\begin_inset CommandInset ref
LatexCommand ref
reference "prob:geometric-interpretations-of-some-complex-expressions"
plural "false"
