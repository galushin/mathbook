\begin_inset CommandInset ref
LatexCommand ref
reference "prob:inverse-of-product"
plural "false"
caps "false"
noprefix "false"

\end_inset

, 
\begin_inset Formula $x^{-1}=\left[a_{m};b_{m}\right]^{-1}\left[a_{m-1};b_{m-1}\right]^{-1}\cdot\dots\cdot\left[a_{2};b_{2}\right]^{-1}\left[a_{1};b_{1}\right]^{-1}$
\end_inset

.
\end_layout

\begin_layout Solution
\begin_inset Formula $\left[a;b\right]^{-1}=\left(aba^{-1}b^{-1}\right)^{-1}=\left(b^{-1}\right)^{-1}\left(a^{-1}\right)^{-1}b^{-1}a^{-1}=bab^{-1}a^{-1}=\left[b;a\right]$
\end_inset

.
\end_layout

\begin_layout Solution
Таким образом, 
\begin_inset Formula $x^{-1}=\left[b_{m};a_{m}\right]\left[b_{m-1};a_{m-1}\right]\cdot\dots\cdot\left[b_{2};a_{2}\right]\left[b_{1};a_{1}\right]$
\end_inset

, то есть 
\begin_inset Formula $x^{-1}$
\end_inset

 представляет собой произведение конечного числа коммутаторов, то есть 
\begin_inset Formula $x^{-1}\in K\left(G\right)$
\end_inset

.
\end_layout

