\begin_inset Formula 
\begin{multline*}
AB=\left(I-uv^{T}\right)\left(I-\frac{uv^{T}}{1+v^{T}u}\right)=\\
=I-uv^{T}-\frac{uv^{T}}{1+v^{T}u}+\frac{uv^{T}uv^{T}}{1+v^{T}u}=\\
=I-\frac{uv^{T}\left(1+v^{T}u-1\right)}{1+v^{T}u}+\frac{uv^{T}\cdot v^{T}u}{1+v^{T}u}=\\
=I-\frac{uv^{T}\left(v^{T}u-v^{T}u\right)}{1+v^{T}u}=I.
\end{multline*}

\end_inset


\end_layout

