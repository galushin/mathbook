\begin_inset Formula 
\[
\begin{array}{c}
\left\Vert a\right\Vert =0\Rightarrow a=0,\\
b\neq0\rightarrow\left\Vert ab\right\Vert \ge\left\Vert a\right\Vert ,\\
\left\Vert remainder\left(a,b\right)\right\Vert <\left\Vert b\right\Vert .
\end{array}
\]

\end_inset


